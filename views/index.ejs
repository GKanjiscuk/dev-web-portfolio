<body>
  <%- include('partials/header') %>

  <section id="inicio">
    <div class="inicio-container">
      <div class="inicio centralizador">
        <div class="posicionamento organizador-mobile">
          <div class="apresentacao">
            <p class="descricao">
              Olá, eu sou <br />
              <span style="display: inline" class="meu-nome"
                >Giovanni Kanjiscuk.</span
              >
              <br />
              <!-- Dev Front-end -->
              Desenvolvedor Front-end
            </p>
            <br />
            <div class="linkedin">
              <a
                href="https://www.linkedin.com/in/Giovanni-Kanjiscuk/"
                target="_blank"
                class="link"
                >Linkedin</a
              >
            </div>
          </div>
          <div class="desenho">
            <img
              class="desenho2"
              src="assets/img/6f0e3944-3e4e-429f-8ef5-85047321605d.jfif"
            />
